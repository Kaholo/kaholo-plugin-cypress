{
  "name": "cypress",
  "viewName": "Cypress",
  "type": "executer",
  "main": "app.js",
  "execProgram": "node",
  "imgUrl": "logo.png",
  "version": "0.1.0",
  "description": "Kaholo Plugin for running Cypress tests in Docker containers",
  "category": [
    "Testing"
  ],
  "keywords": [
    "testing",
    "cypress",
    "javascript"
   ],
  "methods": [
    {
      "name": "runCypressTests",
      "viewName": "Run Cypress Tests",
      "params": [
        {
          "name": "workingDirectory",
          "viewName": "Working Directory",
          "description": "The Cypress test project folder containing \"cypress.config.js\"",
          "type": "string",
          "required": true,
          "placeholder": "/home/user/cypress-project"
        },
        {
          "name": "commandLine",
          "viewName": "commandLine",
          "description": "The Cypress test command (but not npx cypress run part)",
          "type": "string",
          "required": true,
          "placeholder": "-q -r json"
        }
      ]
    }
  ]
}
